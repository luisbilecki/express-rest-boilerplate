{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Current File",
            "runtimeExecutable": "/home/luis/.nvm/versions/node/v10.16.0/bin/node",
            "program": "${file}",
            "protocol": "inspector",
            "runtimeArgs": [
                "--harmony",
                "--no-deprecation"
            ],
            "env": {
                "NODE_ENV": "development",              
            },
            "smartStep": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jasmine testing",
            "runtimeExecutable": "/home/luis/.nvm/versions/node/v10.16.0/bin/node",
            "program": "${workspaceFolder}/node_modules/jasmine/bin/jasmine",
            "smartStep": true            
        }
    ]
}
